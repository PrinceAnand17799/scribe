const data = [
  ["id", "label", "In Network?", "Premiums", "BiweeklyPremiums", "Tobacco Credit", "Biweekly Tobacco Credit", "EECostAnnual", "Biweekly EECostAnnual", "Deductible", "Copay", "HSA", "HSA Eligible", "Out of Network Available", "Provider Directory", "Hyperlink Name"],
  ["Surest Flex Copay Plan", "Surest Flex Copay Plan **", true, 704.04, 27.08, 390, 15, 314.04, 12.08, 0, 6600, 0, false, true, "https://whyuhc.com/optumcare/benefits#health_care_providers", "Provider Directory"],
  ["SignatureValue Harmony Plan", "SignatureValue Harmony Plan", true, 1443.12, 55.5, 390, 15, 1053.12, 40.5, 0, 3500, 0, false, false, "https://connect.werally.com/guest/eyJwbGFuTmFtZSI6â€¦VzdCJ9_LWEA-SyoZrUjfjeKx6jT9qd5Q0JdpmdS3fc5UEdaak", "Provider Directory"],
  ["OptumCare EPO Plan", "OptumCare EPO Plan", true, 1347, 51.81, 390, 15, 957, 36.81, 500, 1750, 0, true, false, "https://whyuhc.com/optumcare/benefits#health_care_providers", "Provider Directory"]
];

const hideTobaccoCredits = false; // Boolean variable to hide/show Tobacco-free Credits column

function generateTable() {
  const tableBody = document.getElementById("tableBody");
  const tableHead = document.querySelector("#insuranceTable thead");

  // Generate table header
  if (hideTobaccoCredits) {
    tableHead.innerHTML = `
      <tr>
        <th class="empty-header"></th>
        <th colspan="2">Premiums</th>
        <th colspan="2">Cost of Coverage</th>
      </tr>
      <tr class="sub-header">
        <th>Options</th>
        <th>Annual</th>
        <th>Biweekly</th>
        <th>Annual</th>
        <th>Biweekly</th>
      </tr>
    `;
  } else {
    tableHead.innerHTML = `
      <tr>
        <th class="empty-header"></th>
        <th colspan="2">Premiums</th>
        <th colspan="2">Tobacco-free Credits</th>
        <th colspan="2">Cost of Coverage</th>
      </tr>
      <tr class="sub-header">
        <th>Options</th>
        <th>Annual</th>
        <th>Biweekly</th>
        <th>Annual</th>
        <th>Biweekly</th>
        <th>Annual</th>
        <th>Biweekly</th>
      </tr>
    `;
  }

  // Generate table rows
  for (let i = 1; i < data.length; i++) {
    const row = data[i];
    const tr = document.createElement("tr");

    // Options (label with hyperlink name)
    const optionsTd = document.createElement("td");
    const label = document.createElement("div");
    label.textContent = row[1];
    optionsTd.appendChild(label);

    if (row[12]) { // Check if HSA Eligible
      const hsaLink = document.createElement("a");
      hsaLink.href = "https://example.com"; // Demo URL
      hsaLink.textContent = "HSA Eligible Info";
      hsaLink.target = "_blank";
      optionsTd.appendChild(hsaLink);
      optionsTd.appendChild(document.createElement("br"));
    }

    const providerLink = document.createElement("a");
    providerLink.href = row[14]; // Hyperlink URL
    providerLink.textContent = row[15]; // Hyperlink name
    providerLink.target = "_blank";
    optionsTd.appendChild(providerLink);

    tr.appendChild(optionsTd);

    // Premiums (Annual and Biweekly)
    const annualPremiumTd = document.createElement("td");
    annualPremiumTd.textContent = `$${row[3]}`;
    tr.appendChild(annualPremiumTd);

    const biweeklyPremiumTd = document.createElement("td");
    biweeklyPremiumTd.textContent = `$${row[4]}`;
    tr.appendChild(biweeklyPremiumTd);

    if (!hideTobaccoCredits) {
      // Tobacco-free Credits (Annual and Biweekly)
      const annualTobaccoTd = document.createElement("td");
      annualTobaccoTd.textContent = `-$${row[5]}`;
      tr.appendChild(annualTobaccoTd);

      const biweeklyTobaccoTd = document.createElement("td");
      biweeklyTobaccoTd.textContent = `-$${row[6]}`;
      tr.appendChild(biweeklyTobaccoTd);
    }

    // Cost of Coverage (Annual and Biweekly)
    const annualCostTd = document.createElement("td");
    annualCostTd.textContent = `$${row[7]}`;
    tr.appendChild(annualCostTd);

    const biweeklyCostTd = document.createElement("td");
    biweeklyCostTd.textContent = `$${row[8]}`;
    tr.appendChild(biweeklyCostTd);

    tableBody.appendChild(tr);
  }
}

generateTable();
